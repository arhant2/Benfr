extends base/_account

include mixins/_account-box
include mixins/_address-form-inputs

block accountContent
  +accountBox(`${document ? 'Edit': 'New'} Address`, [['/myAccount', 'Account'], ['/addresses', 'Adddress Book'], ['#', `${document ? 'Edit': 'New'} Address`]])

    form#address-form.form.account__form(action='#')

      +addressFormInputs(document)      

      if document
        .u-display-none
          input(type='text' name='addressId' value=document.id readonly)


      // Submit button
      .form__btn-group
        button#address-form-btn.btn.btn--round.btn--red.btn--load
          span.btn--load__content
            i.fas.fa-check
            | &nbsp;&nbsp;#{document ? 'Save Changes': 'Add Address'}
          span.btn--load__load-content
            i.fa.fa-circle-o-notch.fa-spin
            | &nbsp;Loading
